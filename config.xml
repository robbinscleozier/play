<?xml version="1.0" encoding="UTF-8"?>

<widget xmlns		= "http://www.w3.org/ns/widgets"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	versionCode="1"
	version 	= "1.0.1"
	id        = "com.complex.tv">

	<name>Complex Tv </name>
	<description>
		Complex TV
	</description>

	<author href="complex.com" email="robbins.cleozier@complex.com">
		Complex TV
	</author>

	<gap:platforms>
		<gap:platform name="android" minVersion="2.4" />
		<gap:platform name="webos" />
		<gap:platform name="symbian.wrt" />
		<gap:platform name="blackberry" project="widgets"/>
	</gap:platforms>

	<!-- Android -->
	<icon src="icons/android/drawable_ldpi_ic_launcher.png" gap:platform="android" gap:density="ldpi" />
	<icon src="icons/android/drawable_mdpi_ic_launcher.png" gap:platform="android" gap:density="mdpi" />
	<icon src="icons/android/drawable_hdpi_ic_launcher.png" gap:platform="android" gap:density="hdpi" />
	<icon src="icons/android/drawable_xhdpi_ic_launcher.png" gap:platform="android" gap:density="xhdpi" />

	<!-- Iphone -->
	<icon src="icons/ios/Icon-Small-50" gap:platform="ios" width="57" height="57" />
	<icon src="icons/ios/Icon-72.png" gap:platform="ios" width="72" height="72" />
	<icon src="icons/ios/Icon@2x.png" gap:platform="ios" width="114" height="114" />

	<!-- retina iPad support: PhoneGap 2.5.0+ only -->
	<icon src="icons/ios/Icon-72@2x.png" gap:platform="ios" width="144" height="144" />

	<!-- BlackBerry -->
	<icon src="icons/blackberry/icon.png" gap:platform="blackberry" />

	<!-- Windows -->
	<icon src="icons/windows/icon.png" gap:platform="winphone" />
	<icon src="icons/windows/tileicon.png" gap:platform="winphone" gap:role="background" />

	<!-- Web OS -->
	<icon src="icons/webos/icon.png" gap:platform="webos" />
	<icon src="icons/webos/miniicon.png" gap:platform="webos" gap:role="mini" />

    <gap:splash src="splash/splash.png" />
	<gap:splash src="splash/res/drawable-mdpi.splash.9.png" gap:platform="android" gap:qualifier="mdpi" />
	<gap:splash src="splash/res/drawable-hdpi.splash.9.png" gap:platform="android" gap:qualifier="hdpi" />
	<gap:splash src="splash/res/drawable-xhdpi.splash.9.png" gap:platform="android" gap:qualifier="xhdpi" />
	<gap:splash src="splash/res/drawable-xxhdpi.splash.9.png" gap:platform="android" gap:qualifier="xxhdpi" />

	<feature name="http://api.phonegap.com/1.0/network"/>

	<!-- General -->
	<icon src="icons/icon.png" width="72" height="72" />
	<icon src="icons/icon.png" width="48" height="48" />
	<icon src="icons/icon.png" width="36" height="36"  gap:role="default"  />

	<preference name="phonegap-version" value="3.6.3" />
	<preference name="fullscreen" value="false" />
	<preference name="load-url-timeout" value="60000" />

	<feature name="http://api.phonegap.com/1.0/network"/>

	<gap:plugin name="nl.x-services.plugins.socialsharing" version="4.3.0" />

</widget>